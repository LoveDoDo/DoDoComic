<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tool:background="@color/black_80">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#10ffffff" />

    <RelativeLayout
        android:id="@+id/rlReceiveNewMessage"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:foreground="?selectableItemBackground"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="接收新消息通知"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <com.dodo.xinyue.conan.view.SwitchButton
            android:id="@+id/sbReceiveNewMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            app:kswAnimationDuration="188"
            app:kswBackDrawable="@drawable/selector_switch_button_bg"
            app:kswThumbColor="@color/white"
            app:kswThumbHeight="18dp"
            app:kswThumbMargin="3dp"
            app:kswThumbRangeRatio="2.1"
            app:kswThumbWidth="18dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#10ffffff" />

</LinearLayout>