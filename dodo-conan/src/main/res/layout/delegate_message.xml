<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_global_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_transparent_status_bar" />

        <android.support.v7.widget.Toolbar
            style="@style/ToolbarStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/tvBack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="{icon-back}"
                    android:textColor="@color/selector_icon_bg"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tvBack"
                    android:gravity="center"
                    android:text="消息设置"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#10ffffff" />

        <RelativeLayout
            android:id="@+id/rlReceiveNewMessage"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:foreground="?selectableItemBackground"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:text="接收新消息通知"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <com.dodo.xinyue.conan.view.SwitchButton
                android:id="@+id/sbReceiveNewMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                app:kswAnimationDuration="188"
                app:kswBackDrawable="@drawable/selector_switch_button_bg"
                app:kswThumbColor="@color/white"
                app:kswThumbHeight="18dp"
                app:kswThumbMargin="3dp"
                app:kswThumbRangeRatio="2.1"
                app:kswThumbWidth="18dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#10ffffff" />

    </LinearLayout>

</android.support.v7.widget.ContentFrameLayout>